<div class="col-xs-3 fixed-sidebar">
  <div class="search">
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <i class="fas fa-search"></i>
      <%= f.text_field 'search_value', placeholder: "検索ワードを入力...", size: "28", class: "search_form" %><br>
      <div class="text-right search_select">
        <%= f.select 'search_model', options_for_select({ "投稿を探す" => "post", "ユーザーを探す" => "end_user" }), class: "model-select" %>
        <%= f.select 'search_how', options_for_select({ "部分一致" => "partical", "完全一致" => "match" }), class: "how-select" %>
        <%= f.submit "検索", class: "search-btn" %>
      </div>
    <% end %>
  </div>
  <% if @model == 'post' %>
    <div class="sort-menu dropdown">
      <button class="btn-sm btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
	  	  投稿の並び替え
	  	<span class="caret"></span>
	    </button>
	    <ul class="dropdown-menu" role="menu">
	      <li role="presentation" class="dropdown-header">いいね！のから並び替え</li>
	  	  <li role="presentation">
          <%= link_to "いいね！多い順", search_path('order': "favorite", 'terms': "desc", 'search_model': "post", 'search_value': @value, 'search_how': @how) %>
	  	  </li>
	    	<li role="presentation" class="dropdown-header">費用から並び替え</li>
	    	<li role="presentation">
          <%= link_to "費用の高い順", search_path('order': "cost", 'terms': "desc", 'search_model': "post", 'search_value': @value, 'search_how': @how) %>
	    	</li>
	    	<li role="presentation">
          <%= link_to "費用の安い順", search_path('order': "cost", 'terms': "asc", 'search_model': "post", 'search_value': @value, 'search_how': @how) %>
	    	</li>
	    	<li role="presentation" class="dropdown-header">難易度から並び替え</li>
	    	<li role="presentation">
          <%= link_to "難易度の高い順", search_path('order': "level", 'terms': "desc", 'search_model': "post", 'search_value': @value, 'search_how': @how) %>
	    	</li>
	    	<li role="presentation">
          <%= link_to "難易度の低い順", search_path('order': "level", 'terms': "asc", 'search_model': "post", 'search_value': @value, 'search_how': @how) %>
	    	</li>
	    	<li role="presentation" class="dropdown-header">作業時間から並び替え</li>
	    	<li role="presentation">
	    	  <%= link_to "作業時間の長い順", search_path('order': "time", 'terms': "desc", 'search_model': "post", 'search_value': @value, 'search_how': @how) %>
	    	</li>
	    	<li role="presentation">
          <%= link_to "作業時間の短い順", search_path('order': "time", 'terms': "asc", 'search_model': "post", 'search_value': @value, 'search_how': @how) %>
	    	</li>
	    </ul>
    </div>
  <% end %>
  <table class="table">
    <thead>
      <tr>
        <th>ジャンルから探す</th>
      </tr>
    </thead>
    <tbody>
      <% genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to genre.name, search_path('search_value': genre.id, 'search_how': "match", 'search_model': "post") %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>