<% target_post.comments.each do |comment| %>
  <div class="comment-detail">
    <h5 class="commented-user">
      <strong><%= comment.end_user.name %></strong>
    </h5>
    <p class="commented-time"><%= comment.created_at.strftime('%Y/%m/%d') %></p>
    <div>
      <%= link_to "削除", post_comment_path(comment.post, comment.id), method: :delete, remote: true %>
    </div>
  </div>
  <p class="comment-body">
    <%= comment.body %>
  </p>
<% end %>


