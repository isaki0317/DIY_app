<% if target_post.bookmarked_by?(current_end_user) %>
  <%= link_to post_bookmarks_path(target_post.id), id: "rspec-bookmark-destroy", method: :delete, remote: true do %>
  	<i class="fas fa-bookmark icon-size bookmark_black" aria-hidden="true"></i>
  <% end %>
<% else %>
  <%= link_to post_bookmarks_path(target_post.id), id: "rspec-bookmark-create", method: :post, remote: true do %>
  	<i class="far fa-bookmark icon-size" aria-hidden="true"></i>
  <% end %>
<% end %>