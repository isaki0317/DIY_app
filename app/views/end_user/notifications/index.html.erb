<div class="col-xs-6 col-xs-offset-3 notice-box">
  <h5 class="notice-title text-center">通知</h5>
  <%= link_to notifications_destroy_all_path, method: :delete do %>
    <div class="text-right">
      <i class="fas fa-trash">
        <span>全削除</span>
      </i>
    </div>
  <% end %>
  <% if @notifications.exists? %>
    <div class="notice-main jscroll jscroll-select">
      <%= render @notifications %>
      <%= paginate @notifications %>
    </div>
  <% else %>
    <p>通知はありません</p>
  <% end %>
</div>
