<% if target_post.favorited_by?(current_end_user) %>
  <%= link_to post_favorites_path(target_post.id), method: :delete, remote: true do %>
  	<i class="fas fa-heart fa-lg heart_red" aria-hidden="true"></i>
    <%= target_post.favorites.count %>
  <% end %>
<% else %>
  <%= link_to post_favorites_path(target_post.id), method: :post, remote: true do %>
  	<i class="far fa-heart fa-lg" aria-hidden="true"></i>
  	<%= target_post.favorites.count %>
  <% end %>
<% end %>